generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum PrivacyLevel {
  public
  friends_only
  private
}

enum TabPrivacyLevel {
  friends_only
  close_friends_only
  private
}

model User {
  id             String   @id @default(uuid())
  username       String   @unique
  password       String
  email          String   @unique
  displayName    String?
  bio            String?  @db.Text
  avatarUrl      String?
  dateOfBirth    DateTime?
  totalOnlineSeconds Int @default(0)
  lastOnlineAt   DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Privacy settings
  emailPrivacy   PrivacyLevel @default(friends_only)
  dobPrivacy     PrivacyLevel @default(private)
  onlinePrivacy  PrivacyLevel @default(public)
  lastOnlinePrivacy PrivacyLevel @default(friends_only)
  tabPrivacy     TabPrivacyLevel @default(friends_only)
  friendsListPrivacy PrivacyLevel @default(friends_only)

  // Social media links
  twitter        String?
  linkedin       String?
  instagram      String?
  github         String?
  website        String?
  telegram       String?
  snapchat       String?
  discord        String?
  socialMediaPrivacy PrivacyLevel @default(friends_only)

  // Friend relationships
  sentFriendRequests     FriendRequest[] @relation("Sender")
  receivedFriendRequests FriendRequest[] @relation("Receiver")

  // Friends relation (self-relation)
  friends    Friendship[] @relation("UserFriends")
  friendsOf  Friendship[] @relation("FriendOf")

  presenceSessions PresenceSession[]

  tabSessions TabSession[]
  tabUsages   TabUsage[]

  monthlyLeaderboards MonthlyLeaderboard[]

  @@map("users")
}

model FriendRequest {
  id         String   @id @default(uuid())
  status     String   @default("pending") // pending, accepted, ignored
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  // Relations
  sender     User     @relation("Sender", fields: [senderId], references: [id], onDelete: Cascade)
  senderId   String
  receiver   User     @relation("Receiver", fields: [receiverId], references: [id], onDelete: Cascade)
  receiverId String
  
  @@unique([senderId, receiverId])
  @@map("friend_requests")
}

model Friendship {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  
  // Self-relation to User
  user       User     @relation("UserFriends", fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  friend     User     @relation("FriendOf", fields: [friendId], references: [id], onDelete: Cascade)
  friendId   String

  closeFriend Boolean @default(false)
  
  @@unique([userId, friendId])
  @@map("friendships")
}

model PresenceSession {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String

  startTime  DateTime
  endTime    DateTime?
  duration   Int?

  createdAt  DateTime @default(now())

  @@index([userId, startTime])
  @@map("presence_sessions")
}

model TabSession {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String

  domain     String
  startTime  DateTime
  endTime    DateTime?
  duration   Int?

  createdAt  DateTime @default(now())

  @@index([userId, startTime])
  @@index([userId, domain, startTime])
  @@map("tab_sessions")
}

model TabUsage {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  date      DateTime
  domain    String
  seconds   Int

  createdAt DateTime @default(now())

  @@unique([userId, date, domain])
  @@index([userId, date])
  @@map("tab_usage")
}

model MonthlyLeaderboard {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  month     String   // e.g. "2025-07"
  seconds   Int

  createdAt DateTime @default(now())

  @@unique([userId, month])
  @@index([month, seconds])
  @@map("monthly_leaderboard")
}
